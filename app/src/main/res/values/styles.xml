<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name = "NoActionBar" parent = "@android:style/Theme.Holo.Light">
        <item name = "android:windowActionBar">false</item>
        <item name = "android:windowNoTitle">true</item>
    </style>
    <style name="Toolbar.WithNavigationBack">
        <item name="navigationIcon">@drawable/ic_arrow_drop_down_white_24dp</item>
    </style>
    <style name="Toolbar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>
    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="Widget.CardContentMod" parent="android:Widget">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="TextAppearance.MyApp.Title.Collapsed" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.MyApp.Title.Expanded" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="myTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="myTheme.AppCompat" parent="Theme.AppCompat.NoActionBar">
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
    </style>
    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- The layout for the search view. Be careful. -->
        <item name="layout">@string/app_name</item>
        <!-- Background for the search query section (e.g. EditText) -->
        <item name="queryBackground">@android:color/transparent</item>
        <!-- Background for the actions section (e.g. voice, submit) -->
        <item name="submitBackground">@android:color/transparent</item>
        <!-- Close button icon -->
        <!--<item name="closeIcon">...</item>-->
        <!-- Search button icon -->
        <item name="searchIcon">@drawable/search</item>
        <!-- Go/commit button icon -->
        <!--<item name="goIcon">@drawable/search</item>-->
        <!-- Voice search button icon -->
        <item name="voiceIcon">@drawable/microphone</item>
        <!-- Commit icon shown in the query suggestion row -->
        <!--<item name="commitIcon">...</item>-->
        <!-- Layout for query suggestion rows -->
        <!--<item name="suggestionRowLayout">...</item>-->
    </style>
</resources>

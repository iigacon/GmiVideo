<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gomind.gmivideo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GmiVideoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".view.activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.MovieDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/myTheme.AppCompat">

            <!-- <meta-data android:name="android.app.searchable" -->
            <!-- android:resource="@xml/searchable" /> -->
        </activity>
        <activity android:name=".view.activity.PlayerViewDemoActivity" />
        <activity android:name=".view.activity.ImageShowActivity" />
        <activity android:name=".view.activity.VideoShowActivity" />
        <activity android:name=".view.activity.ImageFullActivity"></activity>
    </application>

</manifest>